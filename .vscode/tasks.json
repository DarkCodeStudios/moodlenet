{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start dev env",
      "command": "yarn",
      "args": ["start-dev"],
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "dev-tasks",
      "group": "build",
      "dependsOn": [
        "common dev-build",
        "backend dev-build",
        "backend-gql-gen",
        "common-gql-gen"
        // "webapp dev-build",
        // "webapp-gql-gen"
      ],
      "problemMatcher": []
    },
    {
      "type": "typescript",
      "tsconfig": "packages/common/tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "common dev-build"
      // "dependsOn": ["common-gql-gen"],
    },
    {
      "type": "typescript",
      "tsconfig": "packages/webapp/tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "webapp dev-build"
      // "dependsOn": ["webapp-gql-gen"]
    },
    {
      "type": "typescript",
      "tsconfig": "packages/backend/tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "backend dev-build"
      // "dependsOn": ["backend-gql-gen"]
    },
    {
      "label": "common-gql-gen",
      "command": "yarn",
      "args": ["gen:graphql:types", "-w"],
      "options": {
        "cwd": "packages/common"
      },
      "group": "build"
    },
    {
      "label": "backend-gql-gen",
      "command": "yarn",
      "args": ["gen:graphql:types", "-w"],
      "options": {
        "cwd": "packages/backend"
      },
      "group": "build"
    }
    // {
    //   "label": "webapp-gql-gen",
    //   "command": "yarn",
    //   "args": ["gen:graphql:types", "-w"],
    //   "options": {
    //     "cwd": "packages/webapp"
    //   },
    //   "group": "build"
    // }
  ]
}
