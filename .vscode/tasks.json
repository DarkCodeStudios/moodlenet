{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start dev env",
      "command": "lerna",
      "args": ["run", "start-dev", "--stream"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "dev-tasks",
      "group": "build",
      "dependsOn": ["common dev-build", "webapp dev-build", "backend dev-build", "graphql types generation"]
    },
    {
      "type": "typescript",
      "tsconfig": "packages/common/tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "common dev-build"
    },
    {
      "type": "typescript",
      "tsconfig": "packages/webapp/tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "webapp dev-build"
    },
    {
      "type": "typescript",
      "tsconfig": "packages/backend/tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "backend dev-build"
    },
    {
      "command": "yarn",
      "args": ["gen:graphql:types", "-w"],
      "options": {
        "cwd": "packages/graphql-gen"
      },
      "group": "build",
      "label": "graphql types generation"
    }
  ]
}
