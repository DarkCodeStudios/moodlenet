{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src"
  },

  "include": [
    "src",
    "src/lib/SBLinkComponent.tsx",
    "../ed-meta/src/webapp/components/molecules/fields/ResourceData.stories.tsx"
  ],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "../collection" },
    { "path": "../component-library" },
    { "path": "../ed-meta" },
    { "path": "../ed-resource" },
    { "path": "../extensions-manager" },
    { "path": "../moodle-lms-integration" },
    { "path": "../passport-auth" },
    { "path": "../react-app" },
    { "path": "../simple-email-auth" },
    { "path": "../unsplash" },
    { "path": "../web-user" },
    { "path": "../mn-central-jira-simple-moderations" }
  ],
  "paths": {
    "@/*": ["src/*"]
  }
}
