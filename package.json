{
  "name": "moodlenet",
  "version": "0.0.1",
  "license": "AGPL",
  "description": "MoodleNet monorepo system",
  "author": "https://github.com/aleclofabbro",
  "_private": true,
  "_workspaces": [
    "packages/common",
    "packages/backend",
    "packages/webapp",
    "packages/graphql-gen"
  ],
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "dependencies": {
    "typescript": "~4.1.5"
  },
  "scripts": {
    "bs": "lerna bootstrap --nohoist=babel-* --nohoist=*react*",
    "start-dev": "PUBLIC_URL=http://localhost:3000 REACT_APP_GRAPHQL_ENDPOINT=http://localhost:8080/graphql lerna run start-dev --parallel --stream -- -- -r ./dotenv",
    "build": "lerna run build --stream",
    "start": "lerna run start --parallel --stream"
  }
}
